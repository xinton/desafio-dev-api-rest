generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["accounts"]
}

model Account {
  id            String      @id @default(uuid())
  balance       Decimal     @default(0.0) @db.Decimal(10, 2)
  number        String      @unique
  branch        String
  holder_cpf    String      @unique // Reference to holder's CPF
  active        Boolean     @default(true)
  blocked       Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // One-to-many relation with transactions for statement
  transactions  Transaction[]

  @@schema("accounts")
  @@map("accounts")
}

model Transaction {
  id          String           @id @default(uuid())
  type        TransactionType
  amount      Decimal          @db.Decimal(10, 2)
  createdAt   DateTime         @default(now())

  // Each transaction belongs to one account (N-to-1 relation)
  account     Account          @relation(fields: [accountId], references: [id])
  accountId   String

  @@schema("accounts")
  @@map("transactions")
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL

  @@schema("accounts")
}